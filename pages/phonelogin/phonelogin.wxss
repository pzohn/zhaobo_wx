page{
  height: 100%;
  width: 100%;
  background: linear-gradient(yellow,orange);
}

.login_logo image{
  width:100%;
  height:125px;
  padding-top: 20%;
  padding-bottom: 5%
}
.changeInfo{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 90%;
  margin: 50rpx auto;
}
.changeInfoName{
  position: relative;
  height: 80rpx;
  width: 100%;
  border-radius: 10rpx;
  background: #fff;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
}
.codeBtn{
  position: absolute;
  right: 0;
  top: 0;
  color:red;
  width: 30%;
  font-size: 26rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.changeInfoName input{
  width: 100%;
  height:100%;
}
.changeBtn{
  width: 60%;
  height: 100rpx;
  background: gray;
  color: #000;
  border-radius: 50rpx;
  position: absolute;
  bottom: 22%;
  left: 20%;
  line-height: 100rpx;
}
