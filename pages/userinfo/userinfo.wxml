<form bindsubmit="formSubmit" bindreset="formReset">
<view class="content">
<image src="{{avatarUrl}}" style="width:88px;height:88px;border-radius:66%;margin-left:37%;margin-top:5%"></image>
  <view class="hr"></view>
  <view class="item">
     <text class="item_text">电话号码：</text> 
     <input type="text" name="phone" value= '{{phone}}'/>
  </view>
  <view class="item">
     <text class="item_text_ex">邮箱：</text>
     <input type="text" name="email" placeholder="****@***.com" value= '{{email}}'/>
  </view>
  <view class="item">
     <text class="item_text_ex">姓名：</text> 
     <input type="text" name="name" value= '{{name}}'/>
  </view>
  <view class="item">
     <text class="item_text_ex">性别：</text> 
     <input maxlength="1" name="sex" placeholder="男/女" value= '{{sex}}'></input>
  </view>
  <view class="item">
     <text class="item_text_ex">年龄：</text> 
     <input type="number" name="age" value= '{{age}}'/>
  </view>

  <view class="button">
      <button class="btn" type="primary" form-type="submit">保存</button>
  </view>
</view>

</form>