/* pages/shoporder/shoporder.wxss */
.header{
  background: linear-gradient(to right, red , rgba(255, 0, 98));
}

.header_content{
  display: flex;
  flex-direction: column;
  color:  #fff;
  text-align: center;
  justify-content: center;
  padding-top:6%;
  padding-bottom:6%;
}
.header_title{
  font-size: 15px;
}
.header_item{
  padding-top: 2%;
  font-size: 30px;
}
.order-shop-list {
  margin-bottom: 100rpx;
  background: #f3f3f3;
  padding-top: 24rpx;
}

.bottom-pay {
  position: fixed;
  bottom: 0;
  width: 100%;
}

.orderShopList {
  font-size: 32rpx;
  padding: 16rpx 24rpx;
  background: #fff;
  margin-bottom: 24rpx;
}

.orderShopList > view {
  min-height: 52rpx;
  line-height: 52rpx;
  color: #727272;
}

.orderShopList > view.first-line {
  border-bottom: 1px solid #f3f3f3;
}

.text-left {
  color: #bebebe;
  display: inline-block;
  width: 160rpx;
}

.text-money {
  float: right;
  font-size: 28rpx;
  color: #ff4c4c;
}



.swiper-tab{
    width: 100%;
    text-align: center;
    height: 88rpx;
    line-height: 88rpx;
    display: flex;
    flex-flow: row;
    justify-content: space-evenly;
    color: #ccc;
    font-size: 16px;
}
.swiper-tab-item{
    width: 30%; 
    color:#434343;
}
.active{
    color:#F65959;
    font-size: 16px;
    font-weight: bold;
}
.show{
  display: block;
}
.hidden{
  display: none;
}