.search{
  display: flex;
  flex-direction: row;
  padding: 5px;
  width: 100%;
}
.searchBg{
  background-color: #E8E8ED;
  width: 75%;
  display: flex;
  flex-direction: row;
  height: 50px;
  line-height: 50px;
  border-radius:16px;
}
.searchBg image{
  margin-left: 10px;
  margin-top:5px;
}
.search input{
  height: 50px;
  line-height: 50px;
  font-size: 20px;
}
.holder{
  font-size: 16px;
}
.btn1{
  font-size: 16px;
  font-weight: bold;
  line-height: 50px;
  margin-left: 10px;
  border:1px solid #3385ff;
  width:20%;
  text-align: center;
  background-color: #3385ff;
  border-radius: 3px;
  color: #fff
}

.video_container{
  padding:25rpx;
}
.type-item{
  border-radius: 10rpx;
  position: relative;
}

.type-item + .type-item{
  margin-top: 20rpx;
}

.type-img{
  width: 100%;
  height: 290rpx;
  border-radius: 10rpx;
  display: block;
}

.title{
  display: flex;
  flex-direction: row;
  padding-top: 10px;
}

.title text{
  left: 10rpx;
  bottom: 20rpx;
  color: black;
  font-size: 28rpx;
  font-weight: 500;
  width: 80%;
  padding-top: 5px;
}

.btn{
  right: 10rpx;
  width: 24%;
  background:url('https://www.gfcamps.cn/sun/goumai.png') no-repeat center center;
  background-size: cover;
  height: 28px;
  border-radius: 25rpx;
  font-size: 14px;
  text-align: center;
  color: rgba(255,255,255,0);
}
