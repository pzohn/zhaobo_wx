.geek-noticebar {
  display: flex;
  padding: 9px 10px;
  font-size: 12px;
  line-height: 1.5;
}

.geek-noticebar--within-icon {
  position: relative;
  padding-right: 30px;
}

.geek-noticebar__left-icon {
  height: 18px;
  min-width: 20px;
  padding-top: 1px;
  box-sizing: border-box;
}

.geek-noticebar__left-icon>image {
  width: 16px;
  height: 16px;
}

.geek-noticebar__right-icon {
  position: absolute;
  top: 10px;
  right: 10px;
  font-size: 15px;
  line-height: 1;
}

.geek-noticebar__content-wrap {
  position: relative;
  flex: 1;
  height: 18px;
  overflow: hidden;
}

.geek-noticebar__content {
  position: absolute;
  white-space: nowrap;
}
