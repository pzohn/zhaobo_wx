.content{
    width: 100%;
    height: 700px;
    background-color: #f2f2f2;
}
.hr{
    padding-top:40px;
}
.item{
    margin: 0 auto;
    border: 1px solid #b1c02c;
    height: 40px;
    width: 90%;
    border-radius: 3px;
    background-color: #38cfc8;
    margin-bottom:15px;
    display: flex;
    flex-direction: row;
}
.item_text_ex{
    height: 40px;
    line-height: 40px;
    margin-left: 5%;
    width: 20%;
}

.item_text{
    height: 40px;
    line-height: 40px;
    margin-left: 5%;
    width: 35%;
}

.item input{
    height: 40px;
    line-height: 40px;
}
.btn{
    width: 90%;
    color: #999999;
    margin-top:40px; 
}

.button{
  display: flex;
  flex-direction: row;
}
